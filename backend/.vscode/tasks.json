{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang compila il file attivo",
            "command": "/opt/homebrew/opt/llvm/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-I${workspaceFolder}/external/arlib/include/arlib",
                "-I${workspaceFolder}/**",
                "-I/opt/homebrew/Cellar/boost/1.86.0_2/include",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Attivit√† generata dal debugger."
        }
    ],
    "version": "2.0.0"
}